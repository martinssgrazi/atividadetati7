<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="431dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="397dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbTitulo"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="12dp"
                android:textColor="@color/cardview_dark_background" android:textSize="28sp" android:textStyle="bold"
        />
        <TextView
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbDescricao"
                app:layout_constraintTop_toBottomOf="@+id/lbTitulo" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_marginTop="8dp"
                android:background="@color/lb"/>
        <TextView
                android:layout_width="407dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbConteudo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lbDescricao" android:layout_marginTop="8dp"
                android:textStyle="italic"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="129dp" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView" app:layout_constraintTop_toBottomOf="@+id/lbConteudo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:scaleType="centerCrop"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbAutor" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>